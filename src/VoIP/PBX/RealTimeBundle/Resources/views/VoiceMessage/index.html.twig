{% extends '::base.html.twig' %}

{% block body -%}
    <h1>VoiceMessage list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dir</th>
                <th>Msgnum</th>
                <th>Recording</th>
                <th>Context</th>
                <th>Macrocontext</th>
                <th>Callerid</th>
                <th>Origtime</th>
                <th>Duration</th>
                <th>Mailboxuser</th>
                <th>Mailboxcontext</th>
                <th>Messagelabel</th>
                <th>Isread</th>
                <th>Flag</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('voicemessage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dir }}</td>
                <td>{{ entity.msgnum }}</td>
                <td>{{ entity.recording }}</td>
                <td>{{ entity.context }}</td>
                <td>{{ entity.macrocontext }}</td>
                <td>{{ entity.callerid }}</td>
                <td>{{ entity.origtime }}</td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.mailboxuser }}</td>
                <td>{{ entity.mailboxcontext }}</td>
                <td>{{ entity.messageLabel }}</td>
                <td>{{ entity.isRead }}</td>
                <td>{{ entity.flag }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('voicemessage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('voicemessage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('voicemessage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
