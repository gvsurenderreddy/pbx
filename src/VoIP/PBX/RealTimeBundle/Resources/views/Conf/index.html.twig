{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Conf list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catmetric</th>
                <th>Varmetric</th>
                <th>Commented</th>
                <th>Filename</th>
                <th>Category</th>
                <th>Varname</th>
                <th>Varval</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('conf_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.catMetric }}</td>
                <td>{{ entity.varMetric }}</td>
                <td>{{ entity.commented }}</td>
                <td>{{ entity.filename }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.varName }}</td>
                <td>{{ entity.varVal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('conf_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('conf_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('conf_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
