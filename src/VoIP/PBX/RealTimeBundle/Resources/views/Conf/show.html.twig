{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Conf</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Catmetric</th>
                <td>{{ entity.catMetric }}</td>
            </tr>
            <tr>
                <th>Varmetric</th>
                <td>{{ entity.varMetric }}</td>
            </tr>
            <tr>
                <th>Commented</th>
                <td>{{ entity.commented }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ entity.filename }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>Varname</th>
                <td>{{ entity.varName }}</td>
            </tr>
            <tr>
                <th>Varval</th>
                <td>{{ entity.varVal }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('conf') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('conf_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
