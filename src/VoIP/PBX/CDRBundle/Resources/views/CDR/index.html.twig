{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CDR list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Accountcode</th>
                <th>Src</th>
                <th>Dst</th>
                <th>Dcontext</th>
                <th>Clid</th>
                <th>Channel</th>
                <th>Dstchannel</th>
                <th>Start</th>
                <th>Answer</th>
                <th>End</th>
                <th>Duration</th>
                <th>Billsec</th>
                <th>Disposition</th>
                <th>Amaflags</th>
                <th>Userfield</th>
                <th>Uniqueid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cdr_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.accountcode }}</td>
                <td>{{ entity.src }}</td>
                <td>{{ entity.dst }}</td>
                <td>{{ entity.dcontext }}</td>
                <td>{{ entity.clid }}</td>
                <td>{{ entity.channel }}</td>
                <td>{{ entity.dstchannel }}</td>
                <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.answer %}{{ entity.answer|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.billsec }}</td>
                <td>{{ entity.disposition }}</td>
                <td>{{ entity.amaflags }}</td>
                <td>{{ entity.userfield }}</td>
                <td>{{ entity.uniqueid }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cdr_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
