{% extends '::base.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" action="{{ path('outline_countries', {'id': outline.id}) }}" method="POST">
	<div class="form-group">
		<label for="countries" class="col-sm-2 control-label">Countries</label>
		<div class="col-sm-10">
			<select class="form-control" id="countries" name="countries[]" multiple>
				{% for country in countries %}
				<option value="{{ country.id }}" {% if country in outline.countries %}selected{% endif %}>{{ country.name }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
