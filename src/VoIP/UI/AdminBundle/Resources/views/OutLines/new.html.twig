{% extends '::base.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" action="{{ outline is defined ? path('outline_update', {'id': outline.id}) : path('outline_create') }}" method="POST">
	<div class="form-group">
		<label for="type" class="col-sm-2 control-label">Type</label>
		<div class="col-sm-10">
			<select type="text" class="form-control" id="type" name="type" required>
				<option value="hoiio" {% if outline is defined and outline.type == 'hoiio' %}value="{{ outline.username }}"{% endif %}>Hoiio.com</option>
				<option value="spa3102" {% if outline is defined and outline.type == 'spa3102' %}value="{{ outline.username }}"{% endif %}>SPA 3102</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-2 control-label">Username</label>
		<div class="col-sm-10">
			<input class="form-control" id="username" name="username" {% if outline is defined %}value="{{ outline.username }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="secret" class="col-sm-2 control-label">Secret</label>
		<div class="col-sm-10">
			<input type="password" class="form-control" id="secret" name="secret" {% if outline is defined %}value="{{ outline.secret }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="host" class="col-sm-2 control-label">Host</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="host" name="host" {% if outline is defined %}value="{{ outline.host }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
