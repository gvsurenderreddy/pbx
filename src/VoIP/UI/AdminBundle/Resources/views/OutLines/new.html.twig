{% extends '::admin.html.twig' %}
{% block container %}
<form class="form-horizontal" role="form" action="{{ outline is defined ? path('outline_update', {'id': outline.id}) : path('outline_create') }}" method="POST">
	<div class="form-group">
		<label for="name" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-10">
			<input class="form-control" id="name" name="name" {% if outline is defined %}value="{{ outline.name }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="type" class="col-sm-2 control-label">Type</label>
		<div class="col-sm-10">
			<select type="text" class="form-control" id="type" name="type" required>
				<option value="hoiio" {% if outline is defined and outline.type == 'hoiio' %}value="{{ outline.username }}"{% endif %}>Hoiio.com</option>
				<option value="spa3102" {% if outline is defined and outline.type == 'spa3102' %}value="{{ outline.username }}"{% endif %}>SPA 3102</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-2 control-label">Username</label>
		<div class="col-sm-10">
			<input class="form-control" id="username" name="username" {% if outline is defined %}value="{{ outline.username }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="secret" class="col-sm-2 control-label">Secret</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="secret" name="secret" {% if outline is defined %}value="{{ outline.secret }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="host" class="col-sm-2 control-label">Host</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="host" name="host" {% if outline is defined %}value="{{ outline.host }}"{% endif %} required>
		</div>
	</div>
	<div class="form-group">
		<label for="ispublic" class="col-sm-2 control-label">Is public</label>
		<div class="col-sm-10">
			<select class="form-control" id="ispublic" name="ispublic" required>
				<option value="0" {% if outline is defined and not outline.ispublic %}selected{% endif %}>No</option>
				<option value="1" {% if outline is defined and outline.ispublic %}selected{% endif %}>Yes</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="shownumber" class="col-sm-2 control-label">Show number</label>
		<div class="col-sm-10">
			<select class="form-control" id="shownumber" name="shownumber" required>
				<option value="0" {% if outline is defined and not outline.shownumber %}selected{% endif %}>No</option>
				<option value="1" {% if outline is defined and outline.shownumber %}selected{% endif %}>Yes</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="precision" class="col-sm-2 control-label">Precision</label>
		<div class="col-sm-10">
			<select class="form-control" id="precision" name="precision" required>
				<option value="0" {% if outline is defined and outline.precision == 0 %}selected{% endif %}>0</option>
				<option value="1" {% if outline is defined and outline.precision == 1 %}selected{% endif %}>1</option>
				<option value="2" {% if outline is defined and outline.precision == 2 %}selected{% endif %}>2</option>
				<option value="3" {% if outline is defined and outline.precision == 3 %}selected{% endif %}>3</option>
				<option value="4" {% if outline is defined and outline.precision == 4 %}selected{% endif %}>4</option>
				<option value="5" {% if outline is defined and outline.precision == 5 %}selected{% endif %}>5</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
