{% extends '::base.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" action="{{ path('outline_rates', {'id': outline.id}) }}" method="POST">
	<div class="form-group">
		<label for="rates" class="col-sm-2 control-label">Rates</label>
		<div class="col-sm-10">
			<select class="form-control" id="rates" name="rates[]" multiple size="20">
				{% for rate in rates %}
				<option value="{{ rate.id }}" {% if rate in outline.rates %}selected{% endif %}>{{ rate.name }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
