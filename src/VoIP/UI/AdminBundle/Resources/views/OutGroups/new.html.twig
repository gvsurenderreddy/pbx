{% extends '::base.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" action="{{ outgroup is defined ? path('outgroup_update', {'id': outgroup.id}) : path('outgroup_create') }}" method="POST">
	<div class="form-group">
		<label for="ispublic" class="col-sm-2 control-label">Is public</label>
		<div class="col-sm-10">
			<select class="form-control" id="ispublic" name="ispublic" required>
				<option value="0" {% if outgroup is defined and not outgroup.ispublic %}selected{% endif %}>No</option>
				<option value="1" {% if outgroup is defined and outgroup.ispublic %}selected{% endif %}>Yes</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
