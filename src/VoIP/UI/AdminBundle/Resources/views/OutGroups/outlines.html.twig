{% extends '::admin.html.twig' %}
{% block container %}
<form class="form-horizontal" role="form" action="{{ path('outgroup_outlines', {'id': outgroup.id}) }}" method="POST">
	<div class="form-group">
		<label for="outlines" class="col-sm-2 control-label">Outlines</label>
		<div class="col-sm-10">
			<select class="form-control" id="outlines" name="outlines[]" multiple size="20">
				{% for outline in outlines %}
				<option value="{{ outline.id }}" {% if outline in outgroup.outlines %}selected{% endif %}>{{ outline.hash }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
