{% extends '::base.html.twig' %}
{% block body %}
<form class="form-horizontal" role="form" action="{{ path('outgroup_companies', {'id': outgroup.id}) }}" method="POST">
	<div class="form-group">
		<label for="companies" class="col-sm-2 control-label">Companies</label>
		<div class="col-sm-10">
			<select class="form-control" id="companies" name="companies[]" multiple size="20">
				{% for company in companies %}
				<option value="{{ company.id }}" {% if company in outgroup.companies %}selected{% endif %}>{{ company.name }}</option>
				{% endfor %}
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
