{% extends '::admin.html.twig' %}
{% block container %}
<table class="table table-condensed table-hover">
	<tr>
		<th colspan="2">Name</th>
		<th>Since</th>
		<th>Credit</th>
		<th>Trial</th>
	</tr>
	{% for company in companies %}
	<tr>
		<td>{{ company.imageurl }}</td>
		<td>{{ company.name }}</td>
		<td>{{ company.createdat|date('d/m/Y') }}</td>
		<td>{{ company.credit }}</td>
		<td>{% if company.istrial %}<span class="glyphicon glyphicon-ok"></span>{% endif %}</td>
	</tr>
	{% endfor %}
</table>
{% endblock %}
