{% extends '::admin.html.twig' %}
{% block container %}
<form class="form-horizontal" role="form" action="{{ path('admin_company_edit', {'reference': company.hash}) }}" method="POST">
	<div class="form-group">
		<label for="master" class="col-sm-2 control-label">Master</label>
		<div class="col-sm-10">
			<select class="form-control" id="master" name="master">
				<option value="0" {% if not company.ismaster %}selected{% endif %}>No</option>
				<option value="1" {% if company.ismaster %}selected{% endif %}>Yes</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Save</button>
		</div>
	</div>
</form>
{% endblock %}
