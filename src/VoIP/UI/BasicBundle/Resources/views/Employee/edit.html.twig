{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Edit employee{% endblock %}
{% block container %}
<div class="page-header">
	<h1>Edit your Buddy</h1>
</div>
<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_employee_edit', {'hash': employee.hash}) }}" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="name" name="name" value="{{ employee.name }}" required>
				</div>
			</div>
			<div class="form-group">
				<label for="extension" class="col-sm-2 control-label">Extension</label>
				<div class="col-sm-10">
					<select class="form-control" id="extension" name="extension" required>
						{% for extension in extensions %}
						<option value="{{ extension }}" {{ employee.extension == extension ? 'selected' }}>{{ extension }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="phones" class="col-sm-2 control-label">Phones</label>
				<div class="col-sm-10">
					<select class="form-control" id="phones" name="phones[]" multiple>
						{% for phone in phones if phone.isactive %}
						<option value="{{ phone.id }}" {% if phone in employee.phones %}selected{% endif %}>{{ phone.name }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="image" class="col-sm-2 control-label">Image</label>
				<div class="col-sm-10">
					<input type="file" class="form-control" id="image" name="image">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary btn-block">Submit</button>
					<a href="{{ path('ui_company') }}" class="btn btn-default btn-block">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>

{% endblock container %}