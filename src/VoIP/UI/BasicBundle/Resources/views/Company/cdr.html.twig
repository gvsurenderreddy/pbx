{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | {{ company.name }}{% endblock %}
{% block container %}
<ul class="pager">
  {% if page != 1 %}<li class="previous"><a href="{{ path('ui_company_cdr', {'page': page - 1}) }}">&larr; Newer</a></li>{% endif %}
  {% if cdrs|length == 20 %}<li class="next"><a href="{{ path('ui_company_cdr', {'page': page + 1}) }}">Older &rarr;</a></li>{% endif %}
</ul>
<table class="table table-hover">
	<tr>
		<th>Date</th>
		<th>Start</th>
		<th>Answer</th>
		<th>End</th>
		<th>Dialer</th>
		<th>Receiver</th>
		<th>Rate</th>
		<th>Price</th>
	</tr>
	{% for cdr in cdrs %}
	<tr>
		<td>{{ cdr.start|date('d/m/Y') }}</td>
		<td>{{ cdr.start|date('H:i:s') }}</td>
		<td>{{ cdr.answer ? cdr.answer|date('H:i:s') }}</td>
		<td>{{ cdr.end|date('H:i:s') }}</td>
		<td>{{ cdr.dialer }}</td>
		<td>{{ cdr.receiver }}</td>
		<td>S$ {{ cdr.rate|number_format(3, '.', ',') }} / min</td>
		<td>S$ {{ cdr.price|number_format(5, '.', ',') }}</td>
	</tr>
	{% endfor %}
</table>
{% endblock container %}