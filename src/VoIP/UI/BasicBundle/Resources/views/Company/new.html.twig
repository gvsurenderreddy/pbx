{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Your company{% endblock %}
{% block headertitle %}Create your company{% endblock headertitle %}
{% block container %}
<div class="row form-new">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_company_new') }}" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="name" name="name" placeholder="My Awesome Company" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-danger btn-block btn-lg">Create</button>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}