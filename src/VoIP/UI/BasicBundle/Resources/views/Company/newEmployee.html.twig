{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | New Buddy{% endblock %}
{% block headertitle %}New Buddy{% endblock headertitle %}
{% block container %}
<div class="row form-new">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_company_newemployee', {'hash': company.hash}) }}" method="POST">
			<div class="form-group">
				<label for="name" class="col-sm-2 control-label">Name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="name" name="name" placeholder="Mark Baloon" required>
				</div>
			</div>
			<div class="form-group">
				<label for="extension" class="col-sm-2 control-label">Extension</label>
				<div class="col-sm-10">
					<select class="form-control" id="extension" name="extension" required>
						{% for extension in extensions %}
						<option value="{{ extension }}">{{ extension }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="phones" class="col-sm-2 control-label">Phones</label>
				<div class="col-sm-10">
					<select class="form-control" id="phones" name="phones[]" multiple>
						{% for phone in phones if phone.isactive %}
						<option value="{{ phone.id }}">{{ phone.name }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="image" class="col-sm-2 control-label">Image</label>
				<div class="col-sm-10">
					<input type="file" class="form-control" id="image" name="image">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-danger btn-block btn-lg">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>

{% endblock container %}