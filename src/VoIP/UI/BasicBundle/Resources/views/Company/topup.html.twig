{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Top up{% endblock %}
{% block headertitle %}Top up{% endblock headertitle %}
{% block container %}
{{ parent() }}
{% if app.request.get('url') %}
<div class="alert alert-warning alert-dismissable">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>Warning!</strong> You do not enough credit to renew your subscription. Please top up before.
</div>
{% endif %}
<form class="form-horizontal" role="form" method="POST" action="{{ path('ui_company_topup') }}">
	<div class="form-group">
		<label for="credit" class="col-sm-2 control-label">Credit</label>
		<div class="col-sm-10">
			<input type="number" class="form-control" id="credit" name="credit">
			<input type="hidden" name="url" value="{{ app.request.get('url') }}">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Add</button>
		</div>
	</div>
</form>
{% endblock container %}