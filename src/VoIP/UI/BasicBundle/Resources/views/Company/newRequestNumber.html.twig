{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Request for a Phone Number{% endblock %}
{% block headertitle %}Request for a Phone Number{% endblock headertitle %}
{% block container %}
<div class="row form-new">
	<div class="col-md-offset-3 col-md-6">
		<h2>Ask for a locale phone number.</h2>
		<form class="form-horizontal" role="form" action="{{ path('ui_company_newrequestnumber') }}" method="POST">
			<div class="form-group">
				<label for="type" class="col-sm-2 control-label">Country</label>
				<div class="col-sm-10">
					<select type="text" class="form-control" id="country" name="country" required>
						<option value="Autralia">Australia (+61)</option>
						<option value="Denmark">Denmark (+45)</option>
						<option value="Finland">Finland (+348)</option>
						<option value="France">France (+33)</option>
						<option value="Germany">Germany (+49)</option>
						<option value="Honk Kong">Honk Kong (+852)</option>
						<option value="Israel">Israel (+972)</option>
						<option value="Netherland">Netherland (+31)</option>
						<option value="New Zealand">New Zealand (+64)</option>
						<option value="Singapore">Singapore (+65)</option>
						<option value="Norway">Singapore (+44)</option>
						<option value="South Africa">South Africa (+27)</option>
						<option value="Spain">Spain (+34)</option>
						<option value="Sweden">Sweden (+46)</option>
						<option value="USA">USA (+1)</option>
						<option value="United Kingdom">United Kingdom (+42)</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="comment" class="col-sm-2 control-label">Comment</label>
				<div class="col-sm-10">
					<textarea type="text" class="form-control" id="comment" name="comment" rows="10"></textarea>
					<p class="help-block">Write us a note.</p>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-danger btn-block btn-lg">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}
