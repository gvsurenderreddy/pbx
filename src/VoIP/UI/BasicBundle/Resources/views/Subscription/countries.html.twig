{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Edit Line{% endblock %}
{% block headertitle %}Edit Line {{ subscription.name }}{% endblock headertitle %}
{% block container %}
{{ parent() }}
<div class="row form-new">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_subscription_countries', {'hash': subscription.hash}) }}" method="POST">
			<div class="form-group">
				<label for="countries" class="col-sm-2 control-label">Countries</label>
				<div class="col-sm-10">
					<select class="form-control" id="countries" name="countries[]" size="20" multiple>
						{% for country in countries %}
						<option value="{{ country.id }}" {% if country in subscription.countries %}selected="selected"{% endif %}>{{ country.name }} ({{ country.callCode }})</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-danger btn-block btn-lg">Save</button>
				</div>
			</div>
		</form>
	</div>
</div>

{% endblock container %}
