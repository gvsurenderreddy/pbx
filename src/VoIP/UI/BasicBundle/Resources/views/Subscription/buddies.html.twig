{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Edit Line{% endblock %}
{% block headertitle %}Edit Line {{ subscription.name }}{% endblock headertitle %}
{% block container %}
<div class="row form-new">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_subscription_buddies', {'hash': subscription.hash}) }}" method="POST">
			<div class="form-group">
				<label for="employees" class="col-sm-2 control-label">Buddies</label>
				<div class="col-sm-10">
					<select class="form-control" id="employees" name="employees[]" size="20" multiple>
						{% for employee in employees %}
						<option value="{{ employee.id }}" {% if employee in subscription.employees %}selected="selected"{% endif %}>{{ employee.name }} ({{ employee.extension }})</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-danger btn-block btn-lg">Save</button>
				</div>
			</div>
		</form>
	</div>
</div>

{% endblock container %}
