{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Edit dial plan{% endblock %}
{% block container %}
<div class="page-header">
	<h1>Edit dial plan</h1>
</div>
<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" action="{{ path('ui_subscription_adddialplan', {'hash': subscription.hash, 'previousItemHash': previousitem ? previousitem.hash : null}) }}" method="POST">
			<div class="form-group">
				<label for="type" class="col-sm-2 control-label">Type</label>
				<div class="col-sm-10">
					<select class="form-control" id="type" name="type">
						<option value="extension">One phone</option>
						<option value="extensions">List of phones</option>
						<option value="company">All the company</option>
						<option value="annoncement">Annoncement</option>
						<option value="voicemail">Voicemail recorder</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="timer" class="col-sm-2 control-label">Ring timer</label>
				<div class="col-sm-10">
					<input type="integer" class="form-control" id="timer" name="timer" placeholder="Ring duration (in sec.)">
				</div>
			</div>
			<div class="form-group">
				<label for="phone" class="col-sm-2 control-label">Phone</label>
				<div class="col-sm-10">
					<select class="form-control" id="phone" name="phone">
						{% for phone in phones %}
						<option value="{{ phone.hash }}">{{ phone.name }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="phones" class="col-sm-2 control-label">Phones</label>
				<div class="col-sm-10">
					<select class="form-control" id="phones" name="phones[]" multiple>
						{% for phone in phones %}
						<option value="phone.hash">{{ phone.name }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary btn-block">Submit</button>
					<a href="{{ path('ui_company', {'hash': company.hash}) }}" class="btn btn-default btn-block">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}