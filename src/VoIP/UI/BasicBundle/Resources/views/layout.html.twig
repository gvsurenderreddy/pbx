						<li><a href="#">Top up</a></li>
						<li class="divider"></li>
						<li><a href="#">Your bill</a></li>
					</ul>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.email }} <b class="caret"></b></a>
					<ul class="dropdown-menu">
						{% if app.user.companies|length > 0 %}
						{% for company in app.user.companies %}
						<li><a href="{{ path('ui_company', {'hash': company.hash}) }}">{{ company.name }}</a></li>
						{% endfor %}
						<li class="divider"></li>
						{% endif %}
						<li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
						<li class="divider"></li>
						<li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
					</ul>
