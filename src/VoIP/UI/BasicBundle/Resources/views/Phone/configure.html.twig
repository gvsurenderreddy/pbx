{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Configure your phone{% endblock %}
{% block headertitle %}Configure your phone {{ phone.name }}{% endblock headertitle %}
{% block container %}
{{ parent() }}
<div class="row" ng-app="fortyeight" ng-controller="ConfigurationCtrl">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" name="form" action="{{ path('ui_phone_setup', {'hash': phone.hash}) }}" target="_blank">
			<div class="form-group {[{(form.ip.$error.required || form.ip.$error.pattern) ? 'has-error' : 'has-success'}]}">
				<label for="ip" class="col-sm-4 control-label">IP address of the phone</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" id="ip" name="ip" ng-model="ip" placeholder="xxx.xxx.xxx.xxx" ng-pattern="/^([0-9]{1,3}\.){3}[0-9]{1,3}(\:\d+)?$/" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<button type="submit" class="btn btn-primary">Configure</button>
					<a href="{{ path('ui_company') }}" class="btn btn-success" ng-show="configured">Back to dashboard</a>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}