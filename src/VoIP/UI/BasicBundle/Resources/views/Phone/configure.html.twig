{% extends "VoIPUIBasicBundle::layout.html.twig" %}
{% block title %}48 | Configure your phone{% endblock %}
{% block container %}
<div class="page-header">
	<h1>Configuration of your phone "{{ phone.name }}"</h1>
</div>
<div class="row" ng-controller="ConfigurationCtrl">
	<div class="col-md-offset-3 col-md-6">
		<form class="form-horizontal" role="form" name="form">
			<div class="form-group {[{(form.ip.$error.required || form.ip.$error.pattern) ? 'has-error' : 'has-success'}]}">
				<label for="ip" class="col-sm-4 control-label">IP address of the phone</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" id="ip" name="ip" ng-model="ip" placeholder="192.168.1.125" ng-pattern="/^([0-9]{1,3}\.){3}[0-9]{1,3}$/" required>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<a href="{{ path('ui_company', {'hash': phone.company.hash}) }}" class="btn btn-default">Not now</a>
					<button type="submit" class="btn btn-primary">Configure</button>
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}
{% block javascripts %}
{{ parent() }}
<script src="{{ path('ui_phone_configure_js', {'hash': phone.hash}) }}"></script>
{% endblock javascripts %}