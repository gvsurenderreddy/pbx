{% extends "::base.html.twig" %}

{% form_theme form _self %}
{% block password_errors %}
   <span class="help-block">{{ block('form_errors') }}</span>
{% endblock %}


{% block container %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<form {{ form_enctype(form) }} class="form-horizontal fos_user_change_password" role="form" action="{{ path('fos_user_registration_register') }}" method="POST">
			<div class="form-group">
				{{ form_label(form.companyName, 'Company name' , { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
				<div class="col-sm-8">
					{{ form_widget(form.companyName, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.companyName) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.email, 'Email' , { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
				<div class="col-sm-8">
					{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.email) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.username, 'Username' , { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
				<div class="col-sm-8">
					{{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.username) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.first, 'Password' , { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
				<div class="col-sm-8">
					{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.plainPassword.first) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.second, 'Confirm your password' , { 'label_attr': {'class': 'col-sm-4 control-label'} }) }}
				<div class="col-sm-8">
					{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
					{{ form_errors(form.plainPassword.second) }}
				</div>
			</div>
			{{ form_rest(form) }}
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" />
				</div>
			</div>
		</form>
	</div>
</div>
{% endblock container %}

{% trans_default_domain 'FOSUserBundle' %}


